<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmsvo.offlinealchemy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".classes.activities.Main2Activity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- android:theme="@style/Dark"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".classes.activities.ArticleViewActivity"
            android:label="@string/title_activity_article_view"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="https://evo-lutio.livejournal.com" android:pathPattern="/.*" android:scheme="http"/>
                <data android:host="https://evo-lutio.livejournal.com" android:pathPattern="/.*" android:scheme="https"/>
                <data android:host="https://evo-lutio.livejournal.com" android:pathPattern="/.*" android:scheme="android-app"/>
                <data android:scheme="http"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".classes.activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".classes.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".classes.activities.TagsActivity"
            android:label="@string/title_activity_tags"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>